set $mode_settings Settings: [g]nome [a]lsa [p]ulseaudio [n]vidia [s]team_mode
bindsym $mod+c mode "$mode_settings"

mode "$mode_settings" {
	bindsym g exec env XDG_CURRENT_DESKTOP=GNOME gnome-control-center
	bindsym a exec gnome-alsamixer
	bindsym p exec pavucontrol
	bindsym n exec nvidia-settings
	bindsym Escape mode "default"
	bindsym Return mode "default"
}

# ------------------------------------------------------------------------------
# Game mode
# ------------------------------------------------------------------------------
set $mode_game Settings: Game mode [o]n o[f]f

bindsym $mod+g mode "$mode_game"

mode "$mode_game" {
	bindsym o exec killall compton dropbox variety & nvidia-settings -a AllowVRR=1 & nvidia-settings -a ShowVRRVisualIndicator=1 & steam
	bindsym f exec compton --config ~/.compton.conf & nvaidia-settings -a AllowVRR=0 & nvidia-settings -a ShowVRRVisualIndicator=0
	bindsym Escape mode "default"
	bindsym Return mode "default"
}

