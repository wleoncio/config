[user]
	email = w.l.netto@medisin.uio.no
	name = Waldir Leoncio
[alias]
	df = diff
	dff = diff --word-diff=color
	dfc = diff --cached
	dffc = diff --cached --word-diff=color
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all -n 15
	lgg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all
	forget = git rm --cached $1
	forgetfolder = git rm -r --cached $1 
	countcomm = rev-list --count
	co = checkout
	cb = checkout -b
	db = branch -d
	cm = commit
	cmm = commit -m
	aa = add -A
	cam = commit -am
	cma = commit --amend
	ss = status
[core]
	editor = vim
[credential]
    helper = store
[color]
	ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[help]
	autocorrect = 1
[merge]
	ff = no
[pull]
	ff = yes
