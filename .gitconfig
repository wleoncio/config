[user]
	email = waldir.leoncio@gmail.com
	name = Waldir Leoncio
[alias]
	df = diff --word-diff=color
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --all -n 15
	forget = filter-branch --index-filter "git rm -rf --cached --ignore-unmatch ${1}" HEAD
	FORGET = filter-branch -f --index-filter "git rm -rf --cached --ignore-unmatch ${1}" HEAD
	countcomm = rev-list --count
	co = checkout
	cb = checkout -b
	db = branch -d
	cm = commit
	cmm = commit -m
	aa = add -A
	cam = commit -am
	cma = commit --amend
	ss = status
[core]
	editor = vim
[credential]
    helper = store
[color]
	ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[help]
	autocorrect = 1
[merge]
	ff = no
