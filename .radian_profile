# Full color list: https://help.farbox.com/pygments.html
# options(radian.color_scheme = "colorful") # for light backgrounds
options(radian.color_scheme = "native") # for dark backgrounds
options(radian.auto_match = TRUE)
options(radian.highlight_matching_bracket = TRUE)
options(radian.complete_while_typing = FALSE)
options(radian.history_search_ignore_case = TRUE)
options(radian.escape_key_map = list(
	# Press <Esc> + <key> to trigger value
    list(key = "-", value = " <- "),
    list(key = "m", value = " %>% "),
    list(key = "q", value = "q()")
))
