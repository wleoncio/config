{
    "alignment.chars": {
        "<-": {
            "spaceBefore": 1,
            "spaceAfter": 1
        }
    },
    "bracket-pair-colorizer-2.colors": [
        "Gold",
        "Orchid",
        "LightSkyBlue",
        "Green",
        "Gray"
    ],
    "bracket-pair-colorizer-2.forceUniqueOpeningColor": false,
    "bracket-pair-colorizer-2.highlightActiveScope": true,
    "color-highlight.markerType": "dot-before",
    "comment-divider.mainHeaderAlign": "left",
    "comment-divider.mainHeaderFiller": "=",
    "comment-divider.subheaderAlign": "left",
    "comment-divider.subHeaderFiller": "-",
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.renderSideBySide": false,
    "editor.cursorBlinking": "phase",
    "editor.emptySelectionClipboard": false,
    "editor.fontFamily": "Fira Code",
    "editor.fontLigatures": true,
    "editor.fontSize": 12,
    "editor.fontWeight": "bold",
    "editor.insertSpaces": false,
    "editor.minimap.maxColumn": 80,
    "editor.minimap.showSlider": "always",
    "editor.minimap.side": "left",
    "editor.minimap.size": "fit",
    "editor.mouseWheelZoom": true,
    "editor.renderWhitespace": "all",
    "editor.rulers": [
        // {
        //     "column": 70,
        //     "color": "#333333"
        // },
        {
            "column": 80,
            "color": "#ff0000"
        }
    ],
    "editor.scrollBeyondLastColumn": 0,
    "editor.scrollBeyondLastLine": false,
    "editor.wordWrap": "wordWrapColumn",
    "explorer.compactFolders": false,
    "files.associations": {
        "*.docker": "Dockerfile"
    },
    "files.trimTrailingWhitespace": true,
    "git.autofetch": true,
    "git.checkoutType": ["local"],
    "git.suggestSmartCommit": false,
    "git-graph.dialog.createBranch.checkOut": true,
    "git-graph.repository.fetchAndPrune": true,
    "git-graph.repository.commits.fetchAvatars": true,
    "html.preview.doubleClickToSwitchToEditor": false,
    "latex-workshop.intellisense.package.enabled": true,
    "latex-workshop.intellisense.unimathsymbols.enabled": true,
    "latex-workshop.latex.outDir": "./",
    "latex-workshop.synctex.afterBuild.enabled": true,
    "latex-workshop.view.pdf.viewer": "tab",
    "markdown.extension.tableFormatter.enabled": true,
    "markdown.marp.enableHtml": true,
    "markdown.preview.breaks": true,
    "markdown.preview.doubleClickToSwitchToEditor": false,
    "markdown-pdf.omitBackground": true,
    "open-in-browser.default": "firefox",
    "r.lsp.diagnostics": false,
    "r.lsp.path": "/usr/bin/R",
    "r.helpPanel.helpProvider": "custom",
    "r.rpath.linux": "/usr/bin/R",
    "r.rterm.linux": "/usr/bin/radian",
    "r.sessionWatcher": true,
    "r.alwaysUseActiveTerminal": true,
    "rdebugger.rterm.linux": "/usr/bin/radian",
    "task.saveBeforeRun": "prompt",
    "terminal.integrated.confirmOnExit": true,
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.fontFamily": "Fira Code",
    "terminal.integrated.fontSize": 12,
    "terminal.integrated.fontWeight": "500",
    "todo-tree.general.revealBehaviour": "highlight todo",
    "todo-tree.general.statusBar": "tags",
    "todo-tree.general.statusBarClickBehaviour": "reveal",
    "todo-tree.general.tags": [
        "TODO",
        "FIXME",
        "TEMP",
        "ASK",
        "SUGGEST",
        "DONE"
    ],
    "todo-tree.highlights.customHighlight": {
        "TODO": {
            "background": "green",
            "foreground": "black",
            "icon": "check"
        },
        "FIXME": {
            "background": "red",
            "foreground": "white",
            "iconColour": "red",
            "icon": "alert"
        },
        "TEMP": {
            "background": "#707070",
            "foreground": "black",
            "icon": "clock",
            "iconColour": "gray",
            "type": "line"
        },
        "ASK": {
            "background": "FFCA02",
            "foreground": "black",
            "icon": "question",
            "iconColour": "#FFCA02"
        },
        "SUGGEST": {
            "background": "FFCA02",
            "foreground": "black",
            "icon": "light-bulb",
            "iconColour": "#FFCA02"
        },
        "DONE": {
            "foreground": "green"
        }
    },
    "todo-tree.tree.showInExplorer": false,
    "todo-tree.tree.showScanModeButton": false,
    "window.menuBarVisibility": "hidden",
    "window.restoreWindows": "none",
    "window.zoomLevel": 0,
    "workbench.colorCustomizations" : {
        "terminal.border": "#fff",
        "terminal.foreground" : "#fff",
        "terminal.background" : "#000",
        "terminal.ansiCyan": "#2d2d97",
        "terminal.ansiBrightBlack": "#fff",
        "terminal.ansiBrightRed": "#ff0000",
        "terminal.ansiYellow": "#ffaa00"
    },
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.editor.revealIfOpen": true,
    "workbench.editor.scrollToSwitchTabs": true,
    "workbench.editor.tabSizing": "shrink",
    "workbench.enableExperiments": false,
    "workbench.tree.indent": 32,
    "scm.defaultViewMode": "tree",
    "workbench.colorTheme": "Tomorrow Night Blue",
    "files.autoGuessEncoding": true,
    "markdown.marp.themes": [
        "./themes/uio-light.css",
        "./themes/uio-dark.css"
    ],
    "python.dataScience.askForKernelRestart": false,
    "latex-workshop.bibtex-format.tab": "tab",
    "markdown.extension.print.theme": "dark",
    "comment-divider.length": 60,
    "workbench.startupEditor": "welcomePageInEmptyWorkbench",
    "editor.minimap.enabled": false,
    "editor.overviewRulerBorder": false,
    "editor.smoothScrolling": true,
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "latex-workshop.message.update.show": false,
    "r.bracketedPaste": true,
    "workbench.sideBar.location": "right",
    "githubIssues.queries": [
        {
            "label": "Assigned to me",
            //     "query": "default"
            "query": "repo:${owner}/${repository} state:open assignee:${user} sort:created-asc"
        },
        {
            "label": "Open and unassigned",
            "query": "state:open repo:${owner}/${repository} sort:created-asc no:assignee"
        }
    ],
    "githubIssues.createIssueTriggers": [
        "TODO",
        "FIXME"
    ],
    "githubPullRequests.remotes": [
        "origin",
        "ocbe-uio"
    ],
    "githubIssues.issueBranchTitle": "issue-${issueNumber}",
    "terminal.integrated.drawBoldTextInBrightColors": false,
}
